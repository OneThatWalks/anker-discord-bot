        "noImplicitAny": true,
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "types": ["./typings"]
      },
      "include": [
          "src/**/*"
      ],
